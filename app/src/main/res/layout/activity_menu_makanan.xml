<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuMakanan">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="394dp"
            android:layout_height="218dp"
            app:srcCompat="@drawable/maknanberat" />

        <Button
            android:id="@+id/btnNasiGoreng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="#FF5D51"
            android:text="Nasi Goreng Seafood"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/btnBaked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="#FF5D51"
            android:text="Teriyaki Wingstop"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/btnSpagheti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="#FF5D51"
            android:text="Spagheti Carbonara"
            android:textColor="@color/colorAccent" />


        <Button
            android:id="@+id/btnSushi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="#FF5D51"
            android:text="Salmon Mentai Rice"
            android:textColor="@color/colorAccent" />


        <Button
            android:id="@+id/btnBeef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="#FF5D51"
            android:text="Beef Quesadilla"
            android:textColor="@color/colorAccent" />

    </LinearLayout>



</RelativeLayout>